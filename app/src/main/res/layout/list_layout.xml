<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/user_name_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="12dp"
        android:text="Name:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/user_name_dynamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/user_name_static"
        android:layout_alignBottom="@+id/user_name_static"
        android:layout_toEndOf="@+id/user_name_static"
        android:text="UserName Here"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/user_email_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/user_name_static"
        android:layout_alignStart="@+id/user_name_static"
        android:layout_below="@+id/user_name_static"
        android:text="Email:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/user_email_dynamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/user_email_static"
        android:layout_alignBottom="@+id/user_email_static"
        android:layout_toEndOf="@+id/user_name_static"
        android:text="User Email Here"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_email_dynamic"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/tempPic" />

</RelativeLayout>
