<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/jacky_user_name_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:text="@string/jacky_name_complex_list"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/jacky_user_name_dynamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/jacky_user_name_static"
        android:layout_alignBottom="@+id/jacky_user_name_static"
        android:layout_toEndOf="@+id/jacky_user_name_static"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/jacky_user_email_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/jacky_user_name_static"
        android:layout_alignStart="@+id/jacky_user_name_static"
        android:layout_below="@+id/jacky_user_name_static"
        android:text="@string/jacky_email_complex_list"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/jacky_user_email_dynamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/jacky_user_email_static"
        android:layout_alignBottom="@+id/jacky_user_email_static"
        android:layout_toEndOf="@+id/jacky_user_name_static"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/jacky_user_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/jacky_user_name_static"
        android:layout_marginEnd="85dp"
        app:srcCompat="@drawable/temp_pic" />

</RelativeLayout>
