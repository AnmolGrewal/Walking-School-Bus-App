<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/jacky_permision_message_dynamic"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        app:layout_constraintStart_toEndOf="@+id/jacky_permission_message_static"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/jacky_permission_message_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:text="Message:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/jacky_status_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status given:"
        app:layout_constraintEnd_toEndOf="@+id/jacky_permission_message_static"
        app:layout_constraintTop_toTopOf="@+id/jacky_status_message_dynamic" />

    <TextView
        android:id="@+id/jacky_status_message_dynamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="StatisMessage"
        app:layout_constraintStart_toEndOf="@+id/jacky_permission_message_static"
        app:layout_constraintTop_toBottomOf="@+id/jacky_permision_message_dynamic" />

    <TextView
        android:id="@+id/jacky_title_of_new_paragraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Who gave the status:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jacky_status_static" />

    <TextView
        android:id="@+id/jacky_email_permmsion_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="Email:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jacky_title_of_new_paragraph" />

    <TextView
        android:id="@+id/jacky_permission_email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="EmailMessage"
        app:layout_constraintStart_toEndOf="@+id/jacky_email_permmsion_static"
        app:layout_constraintTop_toBottomOf="@+id/jacky_title_of_new_paragraph" />

    <TextView
        android:id="@+id/jacky_permission_name_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Name:"
        app:layout_constraintEnd_toEndOf="@+id/jacky_email_permmsion_static"
        app:layout_constraintTop_toBottomOf="@+id/jacky_email_permmsion_static" />

    <TextView
        android:id="@+id/jacky_dynamic_name_permission"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="NameMessage"
        app:layout_constraintStart_toEndOf="@+id/jacky_permission_name_static"
        app:layout_constraintTop_toBottomOf="@+id/jacky_permission_email" />

    <TextView
        android:id="@+id/jacky_userid_static_permissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="User ID:"
        app:layout_constraintEnd_toEndOf="@+id/jacky_permission_name_static"
        app:layout_constraintTop_toBottomOf="@+id/jacky_permission_name_static" />

    <TextView
        android:id="@+id/jacky_userid_dynamic_permissions"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="User ID Detail"
        app:layout_constraintStart_toEndOf="@+id/jacky_userid_static_permissions"
        app:layout_constraintTop_toBottomOf="@+id/jacky_dynamic_name_permission" />
</android.support.constraint.ConstraintLayout>
