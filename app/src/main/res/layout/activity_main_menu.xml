<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cmpt276.project.walkinggroupapp.appactivities.MainMenuActivity">

    <Button
        android:id="@+id/jacky_add_monitoring_button"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginBottom="290dp"
        android:layout_marginTop="3dp"
        android:text="@string/jacky_add_mainmenu_top"
        app:layout_constraintBottom_toTopOf="@+id/jacky_message_button"
        app:layout_constraintEnd_toEndOf="@+id/jacky_add_monitoring_by_button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/jacky_add_monitoring_by_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.153" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="248dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/jacky_monitor_user_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jacky_people_who_you_are_monitoring_text"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="10dp" />

        <ListView
            android:id="@+id/jacky_monitoring_list"
            android:layout_width="330dp"
            android:layout_height="190dp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="35dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jacky_people_who_are_monitoring_you_text"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="240dp" />

        <ListView
            android:id="@+id/jacky_monitoing_by_list"
            android:layout_width="330dp"
            android:layout_height="190dp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="265dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/gerry_Logout_Button_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/gerry_logout_main" />

        <Button
            android:id="@+id/gerry_Parent_Dashboard_Button_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/gerry_parent_dashboard_main"
            android:textSize="13sp" />

        <Button
            android:id="@+id/jacky_view_groups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:text="@string/jacky_view_groups_button_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jacky_add_monitoring_button" />

    </LinearLayout>

    <Button
        android:id="@+id/jacky_add_monitoring_by_button"
        android:layout_width="78dp"
        android:layout_height="0dp"
        android:layout_marginBottom="227dp"
        android:layout_marginTop="220dp"
        android:text="@string/jacky_add_button_mainmenu"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/jacky_message_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="122dp"
        android:layout_weight="1"
        android:text="View messages"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/jacky_add_monitoring_button" />

</android.support.constraint.ConstraintLayout>
