    <TextView
        android:id="@+id/jacky_group_description_static"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/jacky_grouup_layout_group_description" />

    <TextView
        android:id="@+id/jacky_group_description_dynamic"
        android:layout_width="wrap_content"
